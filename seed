#!groovy
def urlka='sheriff1021/d323dsl'
job ('seed'){
parameters {
	    choiceParam('BRANCH_NAME', ['volodya', 'master'])
	    activeChoiceParam('CHOICER') {
					 choiceType('CHECKBOX')
					 groovyScript {script('''return ["children1-job","children2-job","children3-job","children4-job"]''')													      																				
}
	}

steps {
        downstreamParameterized {
           			 trigger('$CHOICER') {	
                			  		 block {
                    			   			 buildStepFailure('FAILURE')
                    			   	 		 failure('FAILURE')
                    			   	 		 unstable('UNSTABLE')
                     			   	               }
							 parameters {
                    						predefinedProp('BRANCH_NAME', '$BRANCH_NAME')
						    	             }
				}
	}

for (int i=1; i<5;i++) {
			job ("children${i}-job") {
						scm {
    							git {
         							remote {
                								github(urlka)
                							}
								branch('$BRANCH_NAME')
       			   	 	    		    }
   		   	 	   		     }
						parameters {
               					 	activeChoiceParam('BRANCH_NAME') {
                   					 description('Choose branch')
                   					 filterable(false)
                   					 choiceType('SINGLE_SELECT')
                   					 groovyScript {
                      					  script('("git ls-remote -h https://github.com/sheriff1021/d323dsl").execute().text.readLines().collect { it.split()[1].replaceAll(\'refs/heads/\', 									    \'\')}.unique()')
                  						      }
wrappers {
                preBuildCleanup {
                    deleteDirectories(false)
                    cleanupParameter()
                }
            }              							    			  }
steps {
                shell('''sh script.sh > output.txt; tar -czvf "$BRANCH_NAME"_dsl_script.tar.gz''')
            }         						   }
publishers {
                archiveArtifacts {
                    pattern('output.txt, ${BRANCH_NAME}_dsl_script.tar.gz')

                }

						 }
} 
}}}}

